extends layout.pug
block content
	.container
		h1.categoryHeading Category 1: Security Policy
		div#indexCenterDiv
			div#quizDiv
				div#captionBoxDiv
					img(class='quizImgQ1', src="../updatePolicy.jpg")
					h3.textLeft.questionHeading Q1:
						h4.questionHeading How up to date would you describe your security policy as being?
						form(role='form',id='myForm',action="/security-test",method="post")
							div.radioDiv#normalRadioGroup
								input(type='radio', id='up-to-date', name='selection', value='Up to Date')
								label.lblSpacing(for='up-to-date') Up to Date
								input(type='radio', id='recent', name='selection', value='recent')
								label.lblSpacing(for='recent') Recent
								input(type='radio', id='somewhat-recent', name='selection', value='Somewhat recent')
								label.lblSpacing(for='somewhat-recent') Somewhat recent	
								input(type='radio', id='not-recent', name='selection', value='Not recent')
								label.lblSpacing(for='not-recent') Not recent
								input(type='radio', id='no-policy', name='selection', value='No security policy')
								label.lblSpacing(for='no-policy') No security policy
							div.formButtons
								button.btn.btn-success#btnSubmit1(type='submit') Submit
								button.btn.btn-success#btnNext1(type='button') Next
								button.btn.btn-success.homeButton#btnHome(type='button') Home
								style(type="text/css").
									body {background-color:#87CEFA;}