extends layout.pug
block content
	.container
		h1.categoryHeading Category 2: Passwords
		div#indexCenterDiv
			div#quizDiv
				div#captionBoxDiv
					img(class='quizImgQ1',style="width:600px !important;" src="last-password-change-600px.jpg")
					h3.textLeft.questionHeading Q9:
						h4.questionHeading When did you last change your work password?
						form(role='form',id='myForm',action="/security-test",method="post")
							div.radioDiv#normalRadioGroup(style="margin-left:50px;")
								input(type='radio', id='in-last-month', name='selection', value='In the last month')
								label.lblSpacing(for='in-last-month') In the last month
								input(type='radio', id='in-three-months', name='selection', value='In the last 3 months')
								label.lblSpacing(for='in-three-months') In the last 3 months
								input(type='radio', id='a-year-ago', name='selection', value='In the last 6 months')
								label.lblSpacing(for='in-six-months') In the last 6 months							
								input(type='radio', id='in-six-months', name='selection', value='More than a year ago')
								label.lblSpacing(for='more-than-a-year') More than a year ago
								input(type='radio', id='dont-know', name='selection', value='Dont know')
								label.lblSpacing(for='dont-know') Dont know
							div.formButtons
								button.btn.btn-success#btnSubmit1(type='submit') Submit
								button.btn.btn-success#btnNext10(type='button') Next
							    button.btn.btn-success.homeButton#btnHome(type='button') Home
								style(type="text/css").
									body {background-color:#87CEFA;}