extends layout.pug
block content
	.container
		h1.categoryHeading Category 2: Passwords
		div#indexCenterDiv
			div#quizDiv
				div#captionBoxDiv
					img(class='quizImgQ1', src="duplicate-600px.jpg")
					h3.textLeft.questionHeading Q10:
						h4.questionHeading Does your company allow the usage of duplicate passwords?
						form(role='form',id='myForm',action="/security-test",method="post")
							div.radioDiv#normalRadioGroup(style="margin-left:50px;")
								input(type='radio', id='not-at-all', name='selection', value='Not at all')
								label.lblSpacing(for='not-at-all') Not at all
								input(type='radio', id='after-six-months', name='selection', value='After 6 months')
								label.lblSpacing(for='after-six-months') After 6 months
								input(type='radio', id='after-a-year', name='selection', value='After a year')
								label.lblSpacing(for='after-a-year') After a year						
								input(type='radio', id='no-policy', name='selection', value='No policy on duplicate passwords')
								label.lblSpacing(for='no-policy') No policy on duplicate passwords
							div.formButtons
								button.btn.btn-success#btnSubmit1(type='submit') Submit
								button.btn.btn-success#btnNext11(type='button') Next
								button.btn.btn-success.homeButton#btnHome(type='button') Home
								style(type="text/css").
									body {background-color:#87CEFA;}