extends layout.pug
block content
	.container
		h1.categoryHeading Category 1: Security Policy
		div#indexCenterDiv
			div#quizDiv
				div#captionBoxDiv
					img(class='quizImgQ1', src="important-policy.jpg")
					h3.textLeft.questionHeading Q2:
						h4.questionHeading How important would you regard a security policy as being?
						form(role='form',id='myForm',action="/security-test",method="post")
							div.radioDiv#normalRadioGroup
								input(type='radio', id='very-important', name='selection', value='Very important')
								label.lblSpacing(for='very-important') Very important
								input(type='radio', id='important', name='selection', value='Important')
								label.lblSpacing(for='important') Important
								input(type='radio', id='somewhat-important', name='selection', value='Somewhat important')
								label.lblSpacing(for='somewhat-important') Somewhat important
								input(type='radio', id='not-important', name='selection', value='Not important')
								label.lblSpacing(for='not-important') Not important
								input(type='radio', id='dont-know', name='selection', value='Dont know')
								label.lblSpacing(for='dont-know') Dont know
							div.formButtons
								button.btn.btn-success#btnSubmit1(type='submit') Submit
								button.btn.btn-success#btnNext2(type='button',href="http://localhost:9000/security-test3") Next
							style(type="text/css").
									body {background-color:grey;}
								